					<excludes>
						<exclude>javax/servlet/**</exclude>
					</excludes>
					 -->
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<includes>
						<include>**/JobsTest.java</include>
					</includes>
				</configuration>
			</plugin>
